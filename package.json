{
  "name": "booba-pass-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "prepare": "lefthook install",
    "dev:web": "npm run dev -w apps/web",
    "build:web": "npm run build -w apps/web",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier . --write"
  },
  "devDependencies": {
    "lefthook": "^1.13.6",
    "prettier": "^3.6.2"
  }
}
